<p id="notice"><%= notice %></p>

<h1>Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Codschedule</th>
      <th>Dias</th>
      <th>Inicio</th>
      <th>Fin</th>
      <th>Id subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.codschedule %></td>
        <td><%= schedule.dias %></td>
        <td><%= schedule.inicio %></td>
        <td><%= schedule.fin %></td>
        <td><%= schedule.id_subject %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

